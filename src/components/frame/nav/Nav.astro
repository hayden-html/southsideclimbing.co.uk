<script lang="js">
  const mobMenu = document.getElementById("side-nav");
  const mobNavBG = document.querySelector(".mob-nav-bg");

  function openMenu() {
    mobNavBG.classList.remove("mob-none");
    mobMenu.classList.add("panel-slide_in-right");
  }

  function closeMenu() {
    mobNavBG.classList.add("mob-none");
    mobMenu.classList.remove("panel-slide_in-right");
  }
</script>

<style lang="scss">
  .nav-main {
    background-color: rgb(0, 79, 166);
    display: flex;
    justify-content: space-between;
    padding: 0 0.5rem;
  }

  .logo {
    display: flex;
    margin: auto 0;

    &_wave {
      width: clamp(30px, 9vw, 45px);
      aspect-ratio: 1/1;
      margin-right: clamp(5px, 2vw, 10px);
    }

    &_title {
      width: clamp(200px, 60vw, 320px);
    }
  }
  .links {
    font-family: "Noto Sans JP Variable", sans-serif;
    font-size: 24px;
    font-weight: 500;
    min-height: 70px;
    display: flex;
    align-items: flex-end;

    li {
      margin-right: 15px;
      padding: 0 0 1rem;
    }

    a,
    li {
      color: #fefefe;
      text-decoration: none;
      list-style-type: none;
      transition: 0.2s;
    }

    a:hover,
    li:hover {
      color: #fbd40f;
      transition: 0.2s;
    }
  }

  .dropdown {
    &:hover,
    &:focus {
      .dropdown-list {
        display: block !important;
        max-height: 500px;
        transition: max-height 0.3s ease-out;
      }
    }

    &-list {
      max-height: 0;
      z-index: 1;
      overflow: hidden;
      position: absolute;
      margin-left: -15px;
      background-color: #003f82;
      transition: max-height 0.3s;

      li {
        margin: 0;
        padding: 0 15px 10px;
      }
    }
  }

  .links-mob {
    display: none;
  }

  @media (max-width: 930px) {
    .links-desk {
      display: none;
    }

    .nav-main {
      padding: 0.6rem 0.6rem 0.6rem 0.5rem;
      overflow: hidden;
    }

    .links-mob {
      display: flex;
    }

    .burger {
      display: block;
      width: clamp(25px, 6vw, 35px);
      fill: #fefefe;
    }

    .side-nav {
      min-height: 100dvh;
      min-width: clamp(160px, 45dvw, 260px);
      flex-direction: column;

      align-items: flex-start;
      background-color: #003f82;
      position: fixed;
      z-index: 2;
      top: 0;
      right: 0;
      //   transform: none;
      transform: translateX(100dvw);

      transition: transform 300ms ease-in;

      li {
        margin: 0;
        padding: 0.3rem 1rem;
      }

      li a {
        padding-right: 20px;
      }

      .close {
        display: block;
        padding: 15px 15px 10px;
        margin-left: auto;
        width: clamp(55px, 7vw, 80px);
        fill: #fefefe;
      }

      .socials {
        display: flex;
        width: fit-content;
        margin: auto 0 10px;
        svg {
          padding: 10px;
          width: clamp(55px, 20vw, 65px);
          fill: #fefefe;
          transition: 0.2s;
          &:hover,
          &:active,
          &:focus {
            fill: #fbd40f;
            transition: 0.2s;
          }
        }
      }
    }

    .mob-nav-bg {
      display: block;
      position: absolute;
      top: 0;
      left: 0;
      width: 100dvw;
      height: 100dvh;
      background-color: rgba(48, 48, 48, 0.418);
      z-index: 1;
      opacity: 1;
      transition: opacity 0.25s;
    }
    .mob-none {
      height: 0;
      opacity: 0;
      transition: opacity 0.25s;
    }

    .panel-slide_in-right {
      transform: none;
      //   transform: translateX(100dvw);

      transition: transform 350ms ease-out;
    }
  }
</style>
