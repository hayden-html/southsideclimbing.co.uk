---
const { question } = Astro.props;

export interface Props {
    question: string;
}
---

<div class="question" id="question">
    <p>{question}</p><img
        class="question-arr"
        src="/media/icons/down-arr.svg"
    />
</div>
<div class="answer">
    <p><slot /></p>
</div>

<style lang="scss">
    .question {
        width: 98%;
        background-color: rgb(255, 255, 255);
        color: rgb(68, 68, 68);
        cursor: pointer;
        padding: 12px 18px 8px;
        text-align: left;
        border: none;
        outline: none;
        // transition: 0.4s;
        font-weight: 500;
        font-size: 18px;
        align-content: center;
        display: flex;
        justify-content: space-between;

        // &:hover {
        //     border: 4px solid #bdd6fc;

        // }

        &-arr {
            height: 100%;
            width: 30px;
            float: right;
            margin: auto 0;
            rotate: 270deg;
            color: #0182b1;
            display: block;
            transition: 150ms;
        }
    }

    /* Add a background color to the button if it is clicked on (add the .active class with JS), and when you move the mouse over it (hover) */
    .active,
    .question:hover {
        // background-color: #ccc;
        background-color: #e7f1ff;
        color: #0182b1;
    }

    .active {
        .question-arr {
            // &::after {
            transform: rotate(90deg);
            transition: 150ms;
        }
    }
    .answer {
        padding: 0 18px;
        background-color: white;
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.2s ease-out;
        font-weight: 400;
        font-size: 16px;
        color: #343434;

        p {
            padding: 10px 0;
        }
    }

    @media (max-width: 780px) {
        .question {
            font-size: 15px;
        }

        .answer {
            font-size: 14px;
        }
    }
</style>
