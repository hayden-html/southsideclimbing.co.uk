---
import { Picture } from "@astrojs/image/components";
import tying from "../images/tying.jpg";
import insta2 from "../images/insta-22.jpg";
import insta3 from "../images/insta-3.jpg";
---

<a href="https://www.instagram.com/southsideclimbing/" class="insta-slides">
  <Picture
    src={tying}
    widths={[300, 600]}
    sizes="min(330px,30vw)"
    aspectRatio="1:1"
    alt="A man rethreading a figure of 8 through his harness"
    class="slide s1"
  />
  <Picture
    src={insta2}
    widths={[300, 600]}
    sizes="min(330px,30vw)"
    aspectRatio="1:1"
    alt="A woman on a the crux of a route with her foot placed at waist height"
    class="slide s2"
  />
  <Picture
    src={insta3}
    widths={[300, 600]}
    aspectRatio="1:1"
    sizes="min(330px,30vw)"
    alt="A man half way up a route in the shade with the sunlight just about his head"
    class="slide s3"
  />
</a>

<style lang="scss">
  .insta-slides {
    display: flex;
    justify-content: center;
    margin-bottom: 10px;
    .s1,
    .s3 {
      display: none;
    }

    .slide {
      margin: 0 3px;
    }
    @media (min-width: 365px) {
      .s3 {
        display: block;
      }
      .slide {
        width: clamp(170px, 45%, 250px);
      }
    }
    @media (min-width: 768px) {
      margin: 0 auto 20px;
      .slide {
        width: min(330px, 30vw);
      }
      .s1 {
        display: block;
      }
    }
  }
</style>
