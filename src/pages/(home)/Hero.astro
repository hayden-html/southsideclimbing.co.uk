---
//colors need to be punchier like in illustrator
//video first clip needs frame fix
import "@fontsource-variable/noto-sans-jp";
---

<div class="hero">
  <div class="hero-content">
    <h1>
      EXPERIENCE<br />ROCK CLIMBING<br /> IN <span class="highlight"
        >DORSET</span
      >
    </h1>
    <div class="buttons">
      <a href="" class="btn">Book Now</a>
      <a href="" class="btn">See Courses</a>
    </div>
  </div>
  <video
    autoplay
    loop
    src="/media/video/hero-trailer.webm"
    class="trailer"
    muted></video>
</div>

<style lang="scss">
  .hero {
    display: flex;
    justify-content: space-between;
    background-image: linear-gradient(#004fa6, #005bbd);
    max-height: 80dvh;
  }

  .hero-content {
    margin: auto 5%;
    align-content: center;
    min-width: fit-content;

    h1 {
      display: block;
      font-family: "Pandore", sans-serif;
      line-height: 110%;
      font-size: clamp(38px, 5vw, 6rem);
      margin-bottom: clamp(0.25em, 1.25vw, 0.5em);
      color: #fefefe;
    }

    .highlight {
      color: #fbd40f;
    }
  }

  .buttons {
    display: flex;
    gap: 1em;
    flex-wrap: wrap;
    font-size: clamp(1.1rem, 1.75vw, 1.5rem);
  }

  .trailer {
    min-width: 50dvw;
    max-height: 1050px;
    aspect-ratio: 1 / 1;
    object-fit: cover;
  }

  @media (max-width: 690px) {
    .hero {
      flex-direction: column-reverse;
      height: max-content;
      max-height: unset;
      position: relative;
      .hero-content {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        margin: 0;
        padding: 5%;

        // filter: drop-shadow(0.2em 0.2em #033972da);
        // background-color: #0050a686;
        background-image: linear-gradient(#03397200 0%, #005bbd81 2%);
      }
    }

    .trailer {
      min-width: 100dvw;
      aspect-ratio: 1 / 1.5;
    }
  }
</style>
