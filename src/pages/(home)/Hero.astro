---
//: add 'book now' button function
//: colors need to be punchier like in illustrator
//: video first clip needs frame fix & maybe fade transitions
import "@fontsource-variable/noto-sans-jp";
---

<div class="hero">
  <div class="hero-content">
    <h1>
      EXPERIENCE<br />ROCK CLIMBING<br /> IN <span class="highlight"
        >DORSET</span
      >
    </h1>
    <div class="buttons">
      <button class="btn">Book Now</button>
      <button onclick="location.href='/courses';" class="btn" type="button"
        >See Courses</button
      >
    </div>
  </div>
  <video
    autoplay
    loop
    src="/media/video/hero-trailer.webm"
    class="trailer"
    muted></video>
</div>

<style lang="scss">
  .hero {
    display: flex;
    justify-content: space-between;
    background-image: linear-gradient(#004fa6, #005bbd);
    max-height: 80vh;
  }

  .hero-content {
    margin: auto 5%;
    align-content: center;
    min-width: fit-content;
    font-size: clamp(2rem, 2vw + 2rem, 5.5rem);
  }

  .buttons {
    display: flex;
    gap: 0.3em;
    flex-wrap: wrap;
  }

  .trailer {
    min-width: 50vw;
    max-height: 1050px;
    aspect-ratio: 1 / 1;
    object-fit: cover;
  }

  @media (max-width: 690px) {
    .hero {
      flex-direction: column-reverse;
      height: max-content;
      max-height: unset;
      position: relative;
      .hero-content {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        margin: 0;
        padding: 5%;

        // filter: drop-shadow(0.2em 0.2em #033972da);
        // background-color: #0050a686;
        background-image: linear-gradient(#03397200 0%, #005bbd81 2%);
      }
    }

    .trailer {
      min-width: 100dvw;
      max-height: 950px;
      aspect-ratio: 1 / 1.5;
    }
  }
</style>
