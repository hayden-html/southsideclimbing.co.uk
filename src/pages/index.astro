---
import { Picture } from "@astrojs/image/components";

import Frame from "../layouts/frame.astro";
import ContactForm from "../components/ContactForm.astro";
import Insta from "../components/Insta.astro";
import "../styles/index.scss";

import courses from "../images/gearing-up.jpg";
import about from "../images/about.jpg";
import hero from "../images/hero.jpg";
---

<Frame
  title=""
  description="Experience climbing with Southside Climbing. We our based in Dorset, and run climbing courses for beginners at Portland. You can learn to climb and belay your friends and family!"
>
  <div class="hero">
    <div class="hero-text">Experience Climbing Dorset</div>
    <Picture
      src={hero}
      widths={[324, 500, 1200]}
      sizes="(max-width: 768px) 90vw, 53vw"
      alt="A young man climbing in the sunset with the sea behind him"
      class="hero-img"
      loading="eager"
    />
