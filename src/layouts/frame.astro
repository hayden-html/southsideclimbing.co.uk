---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title, desc } = Astro.props

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<BaseHead title={title} description={desc} />
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
		<!-- <CookiePopUp /> -->
	</body>
</html>

<style lang="scss">
	main {
		min-height: calc(100svh - 61px - 108.4px - 40px);
	}
</style>