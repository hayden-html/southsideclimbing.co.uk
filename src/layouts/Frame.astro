---
import BaseHead from "../components/frame/head/Head.astro";
import Footer from "../components/frame/Footer.astro";
import Nav from "../components/frame/nav/Nav.astro";

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <meta name="ExtraHead" />
    <link rel="sitemap" href="/sitemap-index.xml" />
  </head>
  <body>
    <header>
      <Nav />
    </header>
    <main id="main">
      <slot />
    </main>
    <Footer />
  </body>
</html>
